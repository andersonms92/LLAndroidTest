<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgUserPhoto"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user"
            android:background="@drawable/circle_background"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/roboto"
            tools:text="chaoslune"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/roboto"
            tools:text="Anderson Matos"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvRepositoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_medium"
            tools:text="Luiza Labs Android Test"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvRepositoryDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto"
            tools:text="@string/repository_description_tools"
            android:textSize="12sp"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_gravity="start">

            <ImageView
                android:id="@+id/icForks"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_fork"
                android:layout_marginEnd="4dp" />
            <TextView
                android:id="@+id/tvForksCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="120"
                android:textSize="12sp"
                android:fontFamily="@font/roboto"
                android:textColor="@android:color/holo_orange_dark" />

            <Space
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/icLikes"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_like"
                android:layout_marginEnd="4dp" />
            <TextView
                android:id="@+id/tvLikesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="300"
                android:textSize="12sp"
                android:fontFamily="@font/roboto"
                android:textColor="@android:color/holo_orange_dark" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>